<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:background="@drawable/hfb_top_bg" >
        
        <ImageButton 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/music_btn_open"
            android:onClick="Refresh"
            android:id="@+id/btn_music"
            android:layout_marginLeft="2.0dip"
            android:background="@drawable/btn4_selector"
            />
          <TextView
            android:id="@+id/txt_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/log_but_default" 
            android:layout_marginRight="10.0dip"
            android:textColor="#ffffff"
            android:textSize="20.0sp"
            android:minWidth="60dip"
            android:paddingBottom="3.0dip"
            android:text="1205"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingRight="5.0dip"
            android:paddingLeft="5.0dip"
            android:drawableLeft="@drawable/icon_arrangement_time"
            />
        <TextView
            android:id="@+id/txt_allprice"
            android:layout_width="wrap_content"
              android:paddingRight="5.0dip"
            android:paddingLeft="5.0dip"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/txt_time"
            android:background="@drawable/log_but_default" 
            android:layout_marginRight="10.0dip"
            android:textColor="#ffffff"
            android:textSize="20.0sp"
            android:paddingBottom="3.0dip"
            android:text="1205.0å…ƒ"
              android:minWidth="60dip"
            android:textStyle="bold"
            android:gravity="center"
            />
      
        
    </RelativeLayout>

    <com.izqisoft.view.GameView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/gameview"
         />

</LinearLayout>